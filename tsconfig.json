{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true, // strict mode
    "strictPropertyInitialization": false, // allows to not initialize class's properties
    "skipDefaultLibCheck": true // allows to ignore type check of different libraries
  }
}
